bind '"\eg":"grep "'                                            # alt + g
bind '"\egc":"grep -c"'                                         # alt + g > c
bind '"\egi":"grep -i "'                                        # alt + g > i
bind '"\egv":"grep -v "'                                        # alt + g > v
bind '"\eG":"sudo grep "'                                       # alt + shift + g
bind '"\egc":"sudo grep -c"'                                    # alt + shift + g > c
bind '"\eGi":"sudo grep -i "'                                   # alt + shift + g > i
bind '"\eGv":"sudo grep -v "'                                   # alt + shift + g > v

