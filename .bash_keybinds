#bind '"\eJ":"sudo "'                                           # alt + shift + j

bind '"\ek":"kill "'                                            # alt + k
bind '"\ek9":"kill -9 "'                                        # alt + k > 9
bind '"\eK":"sudo kill "'                                       # alt + shift + k
bind '"\eK9":"sudo kill -9 "'                                   # alt + shift + k > 9

bind '"\el":"ls "'                                              # alt + l
bind '"\ela":"ls -a "'                                          # alt + l > a
bind '"\ell":"ls -l "'                                          # alt + l > l
bind '"\ellatr":"ls -latr "'                                    # alt + l > l > a > t > r
bind '"\eL":"sudo ls "'                                         # alt + shift + l
bind '"\eLa":"sudo ls -a "'                                     # alt + shift + l > a
bind '"\eLl":"sudo ls -l "'                                     # alt + shift + l > l
bind '"\eLlatr":"sudo ls -latr "'                               # alt + shift + l > l > a > t > r

