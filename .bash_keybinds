bind '"\ea":"apt-"'                                             # alt + a
bind '"\eac":"apt-cache "'                                      # alt + a > c
bind '"\eacp":"apt-cache policy "'                              # alt + a > c > p
bind '"\eacs":"apt-cache search "'                              # alt + a > c > s
bind '"\eag":"apt-get "'                                        # alt + a > g
bind '"\eagar":"apt-get autoremove"'                            # alt + a > g > a > r
bind '"\eagi":"apt-get install "'                               # alt + a > g > i
bind '"\eagr":"apt-get remove "'                                # alt + a > g > r
bind '"\eagu":"apt-get upgrade"'                                # alt + a > g > u
bind '"\eag\eu":"apt-get update"'                               # alt + a > g > alt + u
bind '"\eagU":"apt-get dist-upgrade"'                           # alt + a > g > shift + u
bind '"\eA":"sudo apt-"'                                        # alt + shift + a
bind '"\eAc":"sudo apt-cache "'                                 # alt + shift + a > c
bind '"\eAcp":"sudo apt-cache policy "'                         # alt + shift + a > c > p
bind '"\eAcs":"sudo apt-cache search "'                         # alt + shift + a > c > s
bind '"\eAg":"sudo apt-get "'                                   # alt + shift + a > g
bind '"\eAgar":"sudo apt-get autoremove"'                       # alt + shift + a > g > a > r 
bind '"\eAgi":apt-get install "'                                # alt + shift + a > g > i
bind '"\eAgr":apt-get remove "'                                 # alt + shift + a > g > r
bind '"\eAgu":"sudo apt-get upgrade"'                           # alt + shift + a > g > u
bind '"\eAg\eu":"sudo apt-get update"'                          # alt + shift + a > g > alt + u
bind '"\eAgU":"sudo apt-get dist-upgrade"'                      # alt + shift + a > g > shift + u

