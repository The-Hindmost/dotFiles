# Key Bindings:
bind '"\eO1;2P":"cat ~/.bash_shortcuts/my_shortcuts | grep "'   # shift + F1

bind '"\eOQ":"vim "'                                            # F2
bind '"\eOQg":"gvim "'                                          # F2 > g
bind '"\eO1;2Q":"sudo vim "'                                    # shift + F2
bind '"\eO1;2Qg":"sudo gvim "'                                  # shift + F2 > g

bind '"\eOR":"find "'                                           # F3
bind '"\eOR.":find . "'                                         # F3 > .
bind '"\eO1;2R":"sudo find "'                                   # shift + F3
bind '"\eO1;2R.":"sudo find . "'                                # shift + F3 > .

bind '"\eOS":"ssh "'                                            # F4
bind '"\eOSf":"sftp "'                                          # F4 > f
bind '"\eOSx":"ssh -X "'                                        # F4 > x
bind '"\eO1;2S":"sudo ssh "'                                    # shift + F4
bind '"\eO1;2Sf":"sudo sftp "'                                  # shift + F4 > f
bind '"\eO1;2Sx":"sudo ssh -X "'                                # shift + F4 > x

bind '"\e[15~":"!!\n"'                                          # F5
bind '"\e[15;2~":"sudo !!\n"'                                   # shift + F5

bind '"\e[17~":"cp -iv "'                                       # F6
bind '"\e[17~l":"ln -s "'                                       # F6 > l
bind '"\e[17~r":"cp -irv "'                                     # F6 > r
bind '"\e[17;2~":"sudo cp -iv "'                                # shift + F6
bind '"\e[17;2~l":"sudo ln -s "'                                # shift + F6 > l
bind '"\e[17;2~r":"sudo cp -irv "'                              # shift + F6 > r

bind '"\e[18~":"mv -iv "'                                       # F7
bind '"\e[18;2~":"sudo mv -iv "'                                # shift + F7

bind '"\e[19~":"rm -iv "'                                       # F8
bind '"\e[19~d":"rmdir "'                                       # F8 > d
bind '"\e[19~r":"rm -irv "'                                     # F8 > r
bind '"\e[19;2~":"sudo rm -iv "'                                # shift + F8
bind '"\e[19;2~d":"sudo rmdir "'                                # shift + F8 > d
bind '"\e[19;2~r":"sudo rm -irv "'                              # shift + F8 > r

#bind '"\e[20~":""'                                             # F9
#bind '"\e[20;2~":"sudo "'                                      # shift + F9

bind '"\e[24~":"sudo "'                                         # F12
bind '"\e[24;2~":"su\n"'                                        # shift + F12
bind '"\e[24;2~p":"su -p\n"'                                    # shift + F12 > p

